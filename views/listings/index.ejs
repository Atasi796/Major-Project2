
<% layout ('layouts/boilerplate') -%>
 <br>
<div class="tax-toggle">
  <div class="form-check form-switch form-check-reverse">
    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
    <label class="form-check-label" for="switchCheckDefault">Display total before taxes</label>
  </div>
</div>
<br> <br> 
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-lg-1">
    <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
  <img src="<%= listing.image.url %>" class="card-img-top" alt="listingimage" style="height:20rem">
  <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text">
    <b> <%= listing.title %></b> 
      <div>&#8377; <%= listing.price.toLocaleString("en-IN") %>
       <i class="gst-text">+18% GST</i>
    </div>
    </p>
  </div>
</div>
  </a>
     <% } %>
     </div>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggle = document.getElementById('switchCheckDefault');

    toggle.addEventListener('change', function () {
      const gstTexts = document.querySelectorAll('.gst-text');
      gstTexts.forEach(el => {
        el.style.display = this.checked ? 'none' : 'inline';
      });
    });
  });
</script>

